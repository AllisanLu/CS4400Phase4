<!DOCTYPE html>
<html>
<head>
    <title>CS4400</title>
    <script src="/js/stopCustomerRole.js" defer></script>
</head>
<body>
    <h1>Stop Customer Role</h1>
    <form>
        <div>
            <label for="pid"></label>
            <select id="pid">
                <% for (const i in perIDs) { %>
                    <option value="<%= perIDs[i].perID %>"> <%= perIDs[i].perID %> </option>
                <% } %>
            </select>
        </div>
        <input type="button" value="Cancel" name="cancel" onclick="window.location.href='/manageUsers'" />
        <input type="submit" value="Stop Customer Role" id="create"> 
    </form>
    <p hidden id="message"></p>
</body>
</html>