<!DOCTYPE html>
<html>
<head>
    <title>CS4400</title>
    <script src="/js/customerAccountAccess.js" defer></script>
</head>
<body onload="updateAccounts();">
    <h1>Manage Account Access</h1>
    <form>
        <!-- drop downs :D -->
        <div>
            <label for="bank"></label>
            <select id="bank">
                <% for (const i in banks) { %>
                    <option value="<%= banks[i].bankID %>"> <%= banks[i].bankID %> </option>
                <% } %>
            </select>
        </div>
        <div>
            <label for="account"></label>
            <select id="account">
                <% for (const i in accounts) { %>
                    <option value="<%= accounts[i].accountID %>"> <%= accounts[i].accountID %> </option>
                <% } %>
            </select>
        </div>
        <div>
            <label for="customer"></label>
            <select id="customer">
                <% for (const i in customers) { %>
                    <option value="<%= customers[i].perID %>"> <%= customers[i].perID %> </option>
                <% } %>
            </select>
        </div>

        <input type="button" value="Cancel" name="cancel" onclick="window.location.href='/customerMenu'" />
        <input type="submit" value="Remove" id="remove"> 
        <input type="submit" value="Add" id="add"> 
    </form>
    <p hidden id="message"></p>
</body>
</html>